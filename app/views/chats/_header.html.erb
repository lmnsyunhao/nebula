<header>
  <div id="slide-out" class="side-nav sn-bg-4 fixed" style="transform: translateX(0px);">
    <ul class="custom-scrollbar scrollbar-near-moon">
      <li>
        <div class="card">
          <div class="view overlay p-5 m-2">
            <a href="/chats">
              <img class="card-img-top" src="/img/logo.png" alt="Card image cap">
            </a>
          </div>
          <button type="button" class="btn-floating btn-action btn ml-auto mr-4 mdb-color lighten-3" data-toggle="modal" data-target="#basicExampleModal"><i class="fa fa-user-plus"></i></button>

        </div>
      </li>


      <li>
        <ul class="collapsible collapsible-accordion">
          <%= render 'chats/friendlist' %>
        </ul>
      </li>
    </ul>
    <div class="sidenav-bg mask-strong"></div>
  </div>

  <nav class="navbar fixed-top navbar-toggleable-md navbar-expand-lg scrolling-navbar double-nav">
    <div class="float-left">
      <a href="#" data-activates="slide-out" class="button-collapse"><i class="fa fa-bars"></i></a>
    </div>
    <div class="breadcrumb-dn mr-auto">
      <p><b>Nebula</b> - 快捷聊天工具</p>
    </div>
    <ul class="nav navbar-nav nav-flex-icons ml-auto">

      <% if current_user %>

      <li class="nav-item">
       <%#= link_to chats_path, class: "nav-link waves-effect waves-light" do %>
       <!-- <a class="nav-link waves-effect waves-light" href="#"> -->
        <!-- <i class="fa fa-comments-o"></i> <span class="clearfix d-none d-sm-inline-block">Chatroom</span> -->
        <!-- </a> fa-user-->
        <%# end %>
      </li>

      <li class="nav-item px-3">
        <%= link_to chatroom_path, class: "nav-link waves-effect waves-light" do %>
        <i class="fa fa-wechat"></i> <span class="clearfix d-none d-sm-inline-block">聊天室</span>
        <% end %>
      </li>

      <li class="nav-item px-3">
        <%= link_to chats_path, class: "nav-link waves-effect waves-light" do %>
        <i class="fa fa-user"></i> <span class="clearfix d-none d-sm-inline-block"><%= current_user.name %></span>
        <% end %>
      </li>

      <li class="nav-item px-3">
        <%= link_to sessions_logout_path, method: :delete, class: "nav-link waves-effect waves-light" do %>
        <i class="fa fa-sign-out"></i> <span class="clearfix d-none d-sm-inline-block">退出账号</span>
        <% end %>
      </li>

      <% end %>

    </ul>
  </nav>
</header>