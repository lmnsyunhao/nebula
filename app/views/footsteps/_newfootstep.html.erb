<div class="card card-cascade narrower mt-5" id="footstepinput">
  <div class="view view-cascade gradient-card-header cyan lighten-2 narrower py-2 mx-4 mb-3 d-flex justify-content-between align-items-center">
    <a href="" class="white-text mx-3">留下你的足迹</a>
    <div>
      <a href="/articles/<%= @userinfo.id %>/#footstepinput" type="button" class="btn btn-success py-2 px-4">清空</a>
    </div>
  </div>

  <div class="px-4 pb-5">
    <%= form_for @newfootstep, url: footsteps_path, method: :post do |f| %>
    <div class="row pr-4">
      <div class="col-md-12">
        <div class="md-form mb-4 pink-textarea active-pink-textarea-2">
          <i class="fa fa-angle-double-right prefix"></i>
          <label for="post_body">留下你的足迹...</label>
          <%= hidden_field_tag :footstepuser_id, current_user.id %>
          <%= hidden_field_tag :user_id, @userinfo.id %>
          <%= text_area "post", "body", "class"=>"md-textarea form-control", "rows" => 3 %>
        </div>
      </div>
    </div>
    <div class="row pr-4">
      <div class="col-md-12 text-right">
        <%= f.submit '留下足迹', class: 'btn cyan lighten-2 btn-sm' %>
      </div>
    </div>
    <% end %>
  </div>

</div>