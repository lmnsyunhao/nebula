<div class="modal fade" id="changeinfo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">change info</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

<%= form_for(@user_form, url: user_path(current_user), method: :patch) do |f| %>
      <div class="modal-body pl-5 pr-5">
  <div class="modal-body mb-0">
    <%#= hidden_field_tag :users, current_user[:id] %>

    <div class="md-form form-sm">
      <!-- <i class="fa fa-user prefix"></i> -->
      <%= f.label :name, 'Username' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="md-form form-sm">
      <!-- <i class="fa fa-lock prefix"></i> -->
      <%= f.label :sex, "Gender" %>
      <%= f.text_field :sex, class: 'form-control' %>
    </div>

  </div>
      </div>
      <div class="modal-footer">

      <%= button_tag(type: "submit", class: "btn btn-warning waves-effect waves-light") do %>
        Send
      <% end %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
      </div>

<% end %>
    </div>
  </div>
</div>